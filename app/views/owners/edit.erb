<h1>Update Owner</h1>

<form action="/owners/<%= @owner.id %>/edit" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="owner_name"> Owner Name: </label>
  <input id="owner_name" type="text" name="owner[name]" value="<%= @owner.name %>"/><br/>

  <label> Choose an Existing Pet: </label> <br/>

  <%@pets.each do |pet|%>
    <input type="checkbox" name="owner[pet_ids][]" id="<%=pet.id%>" <%='checked' if @owner.pets.include?(pet)%> value="<%=pet.id%>">
      <%=pet.name%>
    </input>
  <%end%>

  <br/>

  <label for="pet_name">and/or, create a new pet:</label>
  <input type="text" name="pet[name]" id="pet_name"/>
  <br/>

  <input type="submit" value="Update Owner">
</form>
